# =============================================================================
# RAG Pipeline Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration (Cheapest Models)
# -----------------------------------------------------------------------------
# OpenAI API key (required)
OPENAI_API_KEY=sk-your-key-here

# Embeddings (cheapest option)
EMBEDDING_PROVIDER=openai
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# No reranking (simplest setup)
RERANKER_PROVIDER=none
ENABLE_RERANK=false

# -----------------------------------------------------------------------------
# Weaviate Configuration
# -----------------------------------------------------------------------------
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_GRPC_URL=weaviate:50051
WEAVIATE_API_KEY=
WEAVIATE_TIMEOUT=120

# -----------------------------------------------------------------------------
# Chunking Strategy (Smaller chunks = cheaper processing)
# -----------------------------------------------------------------------------
CHUNK_SIZE=300
CHUNK_OVERLAP=30
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=500

# -----------------------------------------------------------------------------
# Retrieval Configuration (Simplified)
# -----------------------------------------------------------------------------
DEFAULT_TOP_K=10
HYBRID_ALPHA=0.5

# -----------------------------------------------------------------------------
# FastAPI Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=2
API_RELOAD=false

# -----------------------------------------------------------------------------
# Dash UI Configuration
# -----------------------------------------------------------------------------
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=false
RETRIEVAL_API_URL=http://retrieval:8001

# -----------------------------------------------------------------------------
# Ingestion Configuration
# -----------------------------------------------------------------------------
INGESTION_BATCH_SIZE=50
INGESTION_PARALLEL_WORKERS=2
PDF_SOURCE_DIR=/app/data_pdf
PROCESSED_DIR=/app/data_processed

# OCR Configuration (disabled for cost savings)
ENABLE_OCR=false

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# Prometheus (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# MCP Server Configuration (Disabled for simplicity)
# -----------------------------------------------------------------------------
MCP_SERVER_NAME=rag-navodila
MCP_SERVER_VERSION=1.0.0
MCP_ENABLE=false

# -----------------------------------------------------------------------------
# Storage (for future MinIO/S3 integration)
# -----------------------------------------------------------------------------
STORAGE_BACKEND=local
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=

# -----------------------------------------------------------------------------
# Multi-tenancy (optional)
# -----------------------------------------------------------------------------
ENABLE_MULTI_TENANCY=false
DEFAULT_TENANT=default

